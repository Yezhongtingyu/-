vector<int> trans(int n){//将十进制数转为二进制后哪些位为1，就压入vector中，例如137:7 3 0
    vector<int> vec;
    vector<int> res;
    while(n!=0){
        vec.push_back(n%2);
        n/=2;
    }
    for(int i=vec.size()-1;i>=0;i--){
        if(vec[i]==1){
            res.push_back(i);
        }
    }
    return res;//7 3 0
}
 
void theMi(int n){
    if(n==0){//2^0对应输出为2(0)
        cout<<"2(0)";
        return ;
    }
    if(n==1){//2^1对应输出为2
        cout<<"2";
        return ;
    }
    bool first=true;//用于判断是否添加加号
    vector<int> divisor=trans(n);
    for(int i=0;i<divisor.size();i++){
        if(first==false) //判断是否是下一个数组数
            cout<<"+";
        else
            first=false;
        if(divisor[i]!=0&&divisor[i]!=1){
            cout<<"2(";
            theMi(divisor[i]);
            cout<<")";
        }
        else{
            theMi(divisor[i]);
        }
             
    }
}
int main(){
    int num;
    cin>>num;
    theMi(num);
    return 0;
}
